# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/										controllers.Application.module(ngModule = "home", mode = "src", js="", backendMode = "")
GET		/projects								controllers.Application.redirect(url = "/#!/projects/listview")
GET		/projects/:projectid					controllers.Application.project(projectid, mode = "src", backendMode = "")

POST	/api/v1									controllers.APIv1.exec

POST	/login									controllers.APIv1.login
POST	/logout									controllers.APIv1.logout
POST	/user-groups							controllers.APIv1.userGroups
POST	/current-user							controllers.APIv1.currentUser

# Get minified resources /modules/core.min.js
GET		/ng-modules/$file<.*\.min\.js$>			controllers.Assets.at(path="/public/ng-modules", file)
# Get sources /modules/core/_module.js
GET		/ng-modules/*file						controllers.ExternalAssets.at(path="ng-modules", file)

GET		/components/*file						controllers.Assets.at(path="/public/components", file)
