# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/										controllers.Application.module(ngModule = "home", mode = "src", js="", backendMode = "fake")
GET		/projects								controllers.Application.redirect(url = "/#!/projects/listview")
GET		/projects/:projectid					controllers.Application.project(projectid, mode = "src", backendMode = "fake")

# Get minified resources /modules/core.min.js
GET		/ng-modules/$file<.*\.min\.js$>			controllers.Assets.at(path="/public/ng-modules", file)
# Get sources /modules/core/_module.js
GET		/ng-modules/*file						controllers.ExternalAssets.at(path="ng-modules", file)

GET		/components/*file						controllers.Assets.at(path="/public/components", file)
